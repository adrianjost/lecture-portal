<%= form_with(model: [@lecture, poll], local: true) do |form| %> <% if
poll.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(poll.errors.count, "error") %> prohibited this poll from being
    saved:
  </h2>

  <ul>
    <% poll.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <h5>Question:</h5>
  <%= form.text_field :title, class: 'text_field' %>
</div>
<br />
<h5>Selection type</h5>
<div class="field">
  <%= form.radio_button :is_multiselect, false, checked: true, class:
  "radio-elem" %> <%= form.label :is_multiselect, "single select", class:
  "radio-elem" %> <br />
  <%= form.radio_button :is_multiselect, true, class: "radio-elem" %> <%=
  form.label :is_multiselect, "multiselect", class: "radio-elem" %>
</div>
<br />
<h5>Start immediately</h5>
<div class="field">
  <%= form.radio_button :is_active, false, checked: true, class: "radio-elem" %>
  <%= form.label :is_active, "No", class: "radio-elem" %> <br />
  <%= form.radio_button :is_active, true, class: "radio-elem" %> <%= form.label
  :is_active, "Yes", class: "radio-elem" %>
</div>

<div class="field">
  <h5>Options</h5>
  <%= react_component("PollOption", poll.poll_options.length>1 ? {options:
  poll.poll_options.map{|option| option.description}} : {options: ["", ""]}) %>
</div>

<div class="actions">
  <%= form.submit class: 'btn btn-primary' %> <%= link_to 'Back',
  lecture_path(@lecture), :class => 'btn btn-outline-secondary' %>
</div>

<% end %>
