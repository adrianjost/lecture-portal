<p>
  <strong>Title:</strong>
  <%= @poll.title %>
</p>

<p>
  <strong>Is multiselect:</strong>
  <%= @poll.is_multiselect %>
</p>

<p>
  <strong>Is active:</strong>
  <%= @poll.is_active %>
</p>

<h2>Options</h2>
<ol>
<% for option in @poll.poll_options %>

    <li><%= option.description %></li>
<% end %>
</ol>

